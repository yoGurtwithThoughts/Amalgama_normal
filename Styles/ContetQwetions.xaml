<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ContentTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Amalgama;component/Fonts/#Jura"/>
        <Setter Property="Foreground" Value="#9B0000"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0 5.54 0 0"/>
    </Style>
    <Style x:Key="Content" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="pack://application:,,,/Amalgama;component/Fonts/#Jura"/>
        <Setter Property="FontSize" Value="13.5"/>
        <Setter Property="Margin" Value="0 5.54 0 0"/>
    </Style>
</ResourceDictionary>